{
  "name": "@technote-space/release-github-actions-cli",
  "version": "1.9.4",
  "description": "Release GitHub Actions Cli",
  "keywords": [
    "github",
    "github actions",
    "release"
  ],
  "homepage": "https://github.com/technote-space/release-github-actions-cli",
  "bugs": {
    "url": "https://github.com/technote-space/release-github-actions-cli/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/technote-space/release-github-actions-cli.git"
  },
  "license": "MIT",
  "author": {
    "name": "Technote",
    "email": "technote.space@gmail.com",
    "url": "https://technote.space"
  },
  "bin": {
    "release-ga": "./bin/release-ga"
  },
  "files": [
    "lib",
    "bin"
  ],
  "scripts": {
    "build": "rm -rdf lib && rollup -c",
    "cover": "vitest run --coverage",
    "postinstall": "[ -n \"$CI\" ] || [ ! -f node_modules/.bin/husky ] || husky install",
    "lint": "eslint 'src/**/*.ts' '__tests__/**/*.ts' --cache",
    "lint:fix": "eslint --fix 'src/**/*.ts' '__tests__/**/*.ts'",
    "prepublishOnly": "[ -n \"$CI\" ] || [ ! -f node_modules/.bin/pinst ] || pinst --disable",
    "postpublish": "[ -n \"$CI\" ] || [ ! -f node_modules/.bin/pinst ] || pinst --enable",
    "release": "./bin/release-ga",
    "test": "yarn lint && yarn typecheck && yarn cover",
    "typecheck": "tsc --noEmit",
    "update": "npm_config_yes=true npx npm-check-updates -u --timeout 100000 && yarn install && yarn upgrade && yarn audit"
  },
  "dependencies": {
    "@technote-space/github-action-helper": "^5.3.9",
    "@technote-space/github-action-log-helper": "^0.2.8",
    "@technote-space/release-github-actions": "^8.0.1",
    "commander": "^9.4.1",
    "cosmiconfig": "^7.1.0",
    "dotenv": "^16.0.3",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-json": "^5.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^9.0.2",
    "@sindresorhus/tsconfig": "^3.0.1",
    "@technote-space/github-action-test-helper": "^0.11.0",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "@vitest/coverage-c8": "^0.25.2",
    "eslint": "^8.27.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "pinst": "^3.0.0",
    "rollup": "^3.3.0",
    "typescript": "^4.9.3",
    "vitest": "^0.25.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
