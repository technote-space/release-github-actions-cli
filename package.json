{
  "name": "@technote-space/release-github-actions-cli",
  "version": "1.8.6",
  "description": "Release GitHub Actions Cli",
  "keywords": [
    "github",
    "github actions",
    "release"
  ],
  "homepage": "https://github.com/technote-space/release-github-actions-cli",
  "bugs": {
    "url": "https://github.com/technote-space/release-github-actions-cli/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/technote-space/release-github-actions-cli.git"
  },
  "license": "MIT",
  "author": {
    "name": "Technote",
    "email": "technote.space@gmail.com",
    "url": "https://technote.space"
  },
  "bin": {
    "release-ga": "./bin/release-ga"
  },
  "files": [
    "lib",
    "bin"
  ],
  "scripts": {
    "build": "yarn install && tsc && yarn install --production",
    "cover": "jest --coverage",
    "lint": "eslint 'src/**/*.ts' '__tests__/**/*.ts' --cache",
    "lint:fix": "eslint --fix 'src/**/*.ts' '__tests__/**/*.ts'",
    "release": "./bin/release-ga",
    "test": "yarn lint && yarn cover",
    "update": "npm_config_yes=true npx npm-check-updates -u --timeout 100000 && yarn install && yarn upgrade && yarn audit",
    "postinstall": "[ -n \"$CI\" ] || [ ! -f node_modules/.bin/husky ] || husky install",
    "prepublishOnly": "[ -n \"$CI\" ] || [ ! -f node_modules/.bin/pinst ] || pinst --disable",
    "postpublish": "[ -n \"$CI\" ] || [ ! -f node_modules/.bin/pinst ] || pinst --enable"
  },
  "dependencies": {
    "@technote-space/github-action-helper": "^5.2.7",
    "@technote-space/github-action-log-helper": "^0.1.24",
    "@technote-space/release-github-actions": "^7.0.5",
    "commander": "^7.2.0",
    "cosmiconfig": "^7.0.0",
    "dotenv": "^8.2.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@technote-space/github-action-test-helper": "^0.7.9",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.1",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "lint-staged": "^10.5.4",
    "pinst": "^2.1.6",
    "ts-jest": "^26.5.5",
    "typescript": "^4.2.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
